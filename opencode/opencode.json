{
  "$schema": "https://opencode.ai/config.json",
  "provider": {
    "zai-coding": {
      "npm": "@ai-sdk/openai-compatible",
      "name": "Z.AI Coding Plan",
      "options": {
        "baseURL": "https://api.z.ai/api/coding/paas/v4",
        "apiKey": "{env:Z_AI_API_KEY}"
      },
      "models": {
        "glm-4.7": {
          "name": "GLM-4.7",
          "limit": {
            "context": 128000,
            "output": 16384
          }
        }
      }
    },
    "google": {
      "models": {
        "antigravity-gemini-3-pro": {
          "name": "Gemini 3 Pro (Antigravity)",
          "limit": { "context": 1048576, "output": 65535 },
          "modalities": { "input": ["text", "image", "pdf"], "output": ["text"] },
          "variants": {
            "low": { "thinkingLevel": "low" },
            "high": { "thinkingLevel": "high" }
          }
        },
        "antigravity-gemini-3-flash": {
          "name": "Gemini 3 Flash (Antigravity)",
          "limit": { "context": 1048576, "output": 65536 },
          "modalities": { "input": ["text", "image", "pdf"], "output": ["text"] },
          "variants": {
            "minimal": { "thinkingLevel": "minimal" },
            "low": { "thinkingLevel": "low" },
            "medium": { "thinkingLevel": "medium" },
            "high": { "thinkingLevel": "high" }
          }
        },
        "antigravity-claude-sonnet-4-5": {
          "name": "Claude Sonnet 4.5 (no thinking) (Antigravity)",
          "limit": { "context": 200000, "output": 64000 },
          "modalities": { "input": ["text", "image", "pdf"], "output": ["text"] }
        },
        "antigravity-claude-sonnet-4-5-thinking": {
          "name": "Claude Sonnet 4.5 Thinking (Antigravity)",
          "limit": { "context": 200000, "output": 64000 },
          "modalities": { "input": ["text", "image", "pdf"], "output": ["text"] },
          "variants": {
            "low": { "thinkingConfig": { "thinkingBudget": 8192 } },
            "max": { "thinkingConfig": { "thinkingBudget": 32768 } }
          }
        },
        "antigravity-claude-opus-4-5-thinking": {
          "name": "Claude Opus 4.5 Thinking (Antigravity)",
          "limit": { "context": 200000, "output": 64000 },
          "modalities": { "input": ["text", "image", "pdf"], "output": ["text"] },
          "variants": {
            "low": { "thinkingConfig": { "thinkingBudget": 8192 } },
            "max": { "thinkingConfig": { "thinkingBudget": 32768 } }
          }
        },
        "gemini-2.5-flash": {
          "name": "Gemini 2.5 Flash (Gemini CLI)",
          "limit": { "context": 1048576, "output": 65536 },
          "modalities": { "input": ["text", "image", "pdf"], "output": ["text"] }
        },
        "gemini-2.5-pro": {
          "name": "Gemini 2.5 Pro (Gemini CLI)",
          "limit": { "context": 1048576, "output": 65536 },
          "modalities": { "input": ["text", "image", "pdf"], "output": ["text"] }
        },
        "gemini-3-flash-preview": {
          "name": "Gemini 3 Flash Preview (Gemini CLI)",
          "limit": { "context": 1048576, "output": 65536 },
          "modalities": { "input": ["text", "image", "pdf"], "output": ["text"] }
        },
        "gemini-3-pro-preview": {
          "name": "Gemini 3 Pro Preview (Gemini CLI)",
          "limit": { "context": 1048576, "output": 65535 },
          "modalities": { "input": ["text", "image", "pdf"], "output": ["text"] }
        }
      }
    },
    "openai": {
      "options": {
        "reasoningEffort": "medium",
        "reasoningSummary": "auto",
        "textVerbosity": "medium",
        "include": [
          "reasoning.encrypted_content"
        ],
        "store": false
      },
      "models": {
        "gpt-5.2": {
          "name": "GPT 5.2 (OAuth)",
          "limit": {
            "context": 272000,
            "output": 128000
          },
          "modalities": {
            "input": [
              "text",
              "image"
            ],
            "output": [
              "text"
            ]
          },
          "variants": {
            "none": {
              "reasoningEffort": "none",
              "reasoningSummary": "auto",
              "textVerbosity": "medium"
            },
            "low": {
              "reasoningEffort": "low",
              "reasoningSummary": "auto",
              "textVerbosity": "medium"
            },
            "medium": {
              "reasoningEffort": "medium",
              "reasoningSummary": "auto",
              "textVerbosity": "medium"
            },
            "high": {
              "reasoningEffort": "high",
              "reasoningSummary": "detailed",
              "textVerbosity": "medium"
            },
            "xhigh": {
              "reasoningEffort": "xhigh",
              "reasoningSummary": "detailed",
              "textVerbosity": "medium"
            }
          }
        },
        "gpt-5.2-codex": {
          "name": "GPT 5.2 Codex (OAuth)",
          "limit": {
            "context": 272000,
            "output": 128000
          },
          "modalities": {
            "input": [
              "text",
              "image"
            ],
            "output": [
              "text"
            ]
          },
          "variants": {
            "low": {
              "reasoningEffort": "low",
              "reasoningSummary": "auto",
              "textVerbosity": "medium"
            },
            "medium": {
              "reasoningEffort": "medium",
              "reasoningSummary": "auto",
              "textVerbosity": "medium"
            },
            "high": {
              "reasoningEffort": "high",
              "reasoningSummary": "detailed",
              "textVerbosity": "medium"
            },
            "xhigh": {
              "reasoningEffort": "xhigh",
              "reasoningSummary": "detailed",
              "textVerbosity": "medium"
            }
          }
        },
        "gpt-5.1-codex-max": {
          "name": "GPT 5.1 Codex Max (OAuth)",
          "limit": {
            "context": 272000,
            "output": 128000
          },
          "modalities": {
            "input": [
              "text",
              "image"
            ],
            "output": [
              "text"
            ]
          },
          "variants": {
            "low": {
              "reasoningEffort": "low",
              "reasoningSummary": "detailed",
              "textVerbosity": "medium"
            },
            "medium": {
              "reasoningEffort": "medium",
              "reasoningSummary": "detailed",
              "textVerbosity": "medium"
            },
            "high": {
              "reasoningEffort": "high",
              "reasoningSummary": "detailed",
              "textVerbosity": "medium"
            },
            "xhigh": {
              "reasoningEffort": "xhigh",
              "reasoningSummary": "detailed",
              "textVerbosity": "medium"
            }
          }
        },
        "gpt-5.1-codex": {
          "name": "GPT 5.1 Codex (OAuth)",
          "limit": {
            "context": 272000,
            "output": 128000
          },
          "modalities": {
            "input": [
              "text",
              "image"
            ],
            "output": [
              "text"
            ]
          },
          "variants": {
            "low": {
              "reasoningEffort": "low",
              "reasoningSummary": "auto",
              "textVerbosity": "medium"
            },
            "medium": {
              "reasoningEffort": "medium",
              "reasoningSummary": "auto",
              "textVerbosity": "medium"
            },
            "high": {
              "reasoningEffort": "high",
              "reasoningSummary": "detailed",
              "textVerbosity": "medium"
            }
          }
        },
        "gpt-5.1-codex-mini": {
          "name": "GPT 5.1 Codex Mini (OAuth)",
          "limit": {
            "context": 272000,
            "output": 128000
          },
          "modalities": {
            "input": [
              "text",
              "image"
            ],
            "output": [
              "text"
            ]
          },
          "variants": {
            "medium": {
              "reasoningEffort": "medium",
              "reasoningSummary": "auto",
              "textVerbosity": "medium"
            },
            "high": {
              "reasoningEffort": "high",
              "reasoningSummary": "detailed",
              "textVerbosity": "medium"
            }
          }
        },
        "gpt-5.1": {
          "name": "GPT 5.1 (OAuth)",
          "limit": {
            "context": 272000,
            "output": 128000
          },
          "modalities": {
            "input": [
              "text",
              "image"
            ],
            "output": [
              "text"
            ]
          },
          "variants": {
            "none": {
              "reasoningEffort": "none",
              "reasoningSummary": "auto",
              "textVerbosity": "medium"
            },
            "low": {
              "reasoningEffort": "low",
              "reasoningSummary": "auto",
              "textVerbosity": "low"
            },
            "medium": {
              "reasoningEffort": "medium",
              "reasoningSummary": "auto",
              "textVerbosity": "medium"
            },
            "high": {
              "reasoningEffort": "high",
              "reasoningSummary": "detailed",
              "textVerbosity": "high"
            }
          }
        }
      }
    }
  },
   "agent": {
    "build": {
      "mode": "primary",
      "model": "openai/gpt-5.2-codex",
      "variant": "low",
      "description": "Primary development agent with full tools"
    },
    "plan": {
      "mode": "primary",
      "model": "openai/gpt-5.2",
      "variant": "low",
      "description": "Analysis and planning agent with plan file management",
      "tools": {
        "todowrite": true,
        "todoread": true,
        "read": true,
        "write": true,
        "edit": true
      },
      "permission": {
        "read": {
          "*": "allow"
        },
        "write": {
          "/home/dxta/.config/opencode/plans/*": "allow"
        },
        "edit": {
          "/home/dxta/.config/opencode/plans/*": "allow"
        },
        "external_directory": "allow",
        "bash": {
          "codex*": "allow",
          "ls*": "allow",
          "ps*": "allow",
          "wc*": "allow",
          "lsof*": "allow",
          "grep*": "allow",
          "pgrep*": "allow",
          "cat*": "allow",
          "awk*": "allow",
          "mkdir -p ~/.config/opencode/plans": "allow",
          "mkdir -p ~/.config/opencode/plans/*": "allow",
          "rm ~/.config/opencode/plans/*": "allow",
          "rm -r ~/.config/opencode/plans/*": "allow",
          "memvid*": "allow",
          "source ~/.config/opencode/scripts/load-mcp-credentials-safe.sh && memvid*": "allow",
          "echo*| memvid*": "allow",
          "source ~/.config/opencode/scripts/load-mcp-credentials-safe.sh && echo*| memvid*": "allow"
        }
      }
    },
    "general": {
      "options": {
        "reasoningEffort": "low"
      }
    },
    "tier-detector": {
      "model": "opencode/gpt-5-nano",
      "options": {
        "reasoningEffort": "minimal"
      }
    },
    "self-reflect": {
      "model": "openai/gpt-5.2-codex",
      "variant": "low"
    },
    "explore": {
      "model": "openai/gpt-5.2-codex",
      "options": {
        "reasoningEffort": "low"
      }
    }
  },
  "command": {
    "sia-code": {
      "template": "Run sia-code (pinned):\nuvx sia-code@0.5.0 $ARGUMENTS",
      "description": "Pinned sia-code 0.5.0 command",
      "agent": "build"
    }
  },
  "mcp": {
    "code-reasoning": {
      "type": "local",
      "command": [
        "pkgx",
        "npx",
        "-y",
        "@mettamatt/code-reasoning"
      ],
      "enabled": true
    },
    "shannon-thinking": {
      "type": "local",
      "command": [
        "pkgx",
        "npx",
        "-y",
        "server-shannon-thinking@latest"
      ],
      "enabled": true
    },
    "graphiti-memory": {
      "type": "local",
      "command": [
        "/home/dxta/.local/bin/uv",
        "run",
        "--isolated",
        "--directory",
        "/home/dxta/dev/mcp/graphiti/mcp_server",
        "graphiti_mcp_server.py",
        "--transport",
        "stdio"
      ],
      "environment": {
        "NEO4J_URI": "{env:NEO4J_URI}",
        "NEO4J_USER": "{env:NEO4J_USER}",
        "NEO4J_PASSWORD": "{env:NEO4J_PASSWORD}",
        "OPENAI_API_KEY": "{env:OPENAI_API_KEY}",
        "MODEL_NAME": "{env:MODEL_NAME}"
      },
      "enabled": false
    },
    "serena-mcp": {
      "type": "local",
      "command": [
        "uvx",
        "--from",
        "git+https://github.com/oraios/serena",
        "serena",
        "start-mcp-server",
        "--context",
        "agent",
        "--project",
        "/home/dxta/dev/tds/brose",
        "--enable-web-dashboard",
        "false",
        "--enable-gui-log-window",
        "false"
      ],
      "enabled": false
    },
    "chunkhound": {
      "type": "local",
      "command": [
        "uvx",
        "chunkhound",
        "mcp"
      ],
      "environment": {
        "CHUNKHOUND_EMBEDDING__PROVIDER": "openai",
        "CHUNKHOUND_EMBEDDING__API_KEY": "{env:OPENAI_API_KEY}",
        "CHUNKHOUND_EMBEDDING__MODEL": "text-embedding-3-large",
        "CHUNKHOUND_LLM_PROVIDER": "claude-code-cli"
      },
      "enabled": false
    },
    "context7": {
      "type": "remote",
      "url": "https://mcp.context7.com/mcp",
      "headers": {
        "CONTEXT7_API_KEY": "{env:CONTEXT7_API_KEY}"
      },
      "enabled": true
    },
    "slack": {
      "type": "local",
      "command": [
        "pkgx",
        "npx",
        "-y",
        "slack-mcp-server@latest",
        "--transport",
        "stdio"
      ],
      "environment": {
        "SLACK_MCP_XOXP_TOKEN": "{env:SLACK_MCP_XOXP_TOKEN}",
        "SLACK_MCP_ADD_MESSAGE_TOOL": "C049JSCEDN3"
      },
      "enabled": false
    },
    "obsidian": {
      "type": "local",
      "command": [
        "pkgx",
        "npx",
        "-y",
        "@huangyihe/obsidian-mcp"
      ],
      "environment": {
        "OBSIDIAN_VAULT_PATH": "/home/dxta/Documents/Obsidian/personal",
        "OBSIDIAN_API_TOKEN": "{env:OBSIDIAN_API_TOKEN}",
        "OBSIDIAN_API_PORT": "27123"
      },
      "enabled": true
    },
    "zai-mcp-server": {
      "type": "local",
      "command": [
        "pkgx",
        "npx",
        "-y",
        "@z_ai/mcp-server"
      ],
      "environment": {
        "Z_AI_API_KEY": "{env:Z_AI_API_KEY}",
        "Z_AI_MODE": "ZAI"
      },
      "enabled": false
    },
    "web-search-prime": {
      "type": "remote",
      "url": "https://api.z.ai/api/mcp/web_search_prime/mcp",
      "headers": {
        "Authorization": "Bearer {env:Z_AI_API_KEY}"
      },
      "enabled": false
    },
    "zread": {
      "type": "remote",
      "url": "https://api.z.ai/api/mcp/zread/mcp",
      "headers": {
        "Authorization": "Bearer {env:Z_AI_API_KEY}"
      },
      "enabled": false
    },
    "web-reader": {
      "type": "remote",
      "url": "https://api.z.ai/api/mcp/web_reader/mcp",
      "headers": {
        "Authorization": "{env:Z_AI_API_KEY}"
      },
      "enabled": false
    },
    "arxiv": {
      "type": "local",
      "command": [
        "uv",
        "tool",
        "run",
        "arxiv-mcp-server",
        "--storage-path",
        "/home/dxta/dev/research/.arxiv-papers"
      ],
      "enabled": true
    }
  },
  "tools": {
    "graphiti-memory_*": false,
    "code-reasoning_*": true,
    "shannon-thinking_*": true,
    "serena-mcp_*": false,
    "chunkhound_*": false,
    "slack_*": false
  },
  "permission": {
    "skill": {
      "*": "allow"
    },
    "read": {
      "*": "allow"
    },
    "bash": {
      "pkgx npm *": "allow",
      "pkgx pnpm *": "allow",
      "pkgx yarn *": "allow",
      "pkgx bun *": "allow",
      "pkgx python *": "allow",
      "pkgx pytest *": "allow",
      "pkgx cargo *": "allow",
      "pkgx go *": "allow",
      "pkgx make *": "allow",
      "pkgx docker *": "allow",
      "pkgx docker compose *": "allow",
      "npm *": "allow",
      "pnpm *": "allow",
      "yarn *": "allow",
      "bun *": "allow",
      "python *": "allow",
      "pytest *": "allow",
      "cargo *": "allow",
      "go *": "allow",
      "make *": "allow",
      "docker *": "allow",
      "docker compose *": "allow",
      "git status": "allow",
      "git diff": "allow",
      "git log": "allow"
    }
  },
  "plugin": [
    "opencode-antigravity-auth@latest",
    "opencode-anthropic-auth@latest",
    "opencode-openai-codex-multi-auth@latest",
    "opencode-pty"
  ]
}
