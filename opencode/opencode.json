{
  "$schema": "https://opencode.ai/config.json",
  "provider": {
    "zai-coding": {
      "npm": "@ai-sdk/openai-compatible",
      "name": "Z.AI Coding Plan",
      "options": {
        "baseURL": "https://api.z.ai/api/coding/paas/v4",
        "apiKey": "{env:Z_AI_API_KEY}"
      },
      "models": {
        "glm-4.7": {
          "name": "GLM-4.7",
          "limit": {
            "context": 128000,
            "output": 16384
          }
        }
      }
    },
    "google": {
      "models": {
        "antigravity-gemini-3-pro": {
          "name": "Gemini 3 Pro (Antigravity)",
          "limit": { "context": 1048576, "output": 65535 },
          "modalities": { "input": ["text", "image", "pdf"], "output": ["text"] },
          "variants": {
            "low": { "thinkingLevel": "low" },
            "high": { "thinkingLevel": "high" }
          }
        },
        "antigravity-gemini-3-flash": {
          "name": "Gemini 3 Flash (Antigravity)",
          "limit": { "context": 1048576, "output": 65536 },
          "modalities": { "input": ["text", "image", "pdf"], "output": ["text"] },
          "variants": {
            "minimal": { "thinkingLevel": "minimal" },
            "low": { "thinkingLevel": "low" },
            "medium": { "thinkingLevel": "medium" },
            "high": { "thinkingLevel": "high" }
          }
        },
        "antigravity-claude-sonnet-4-5": {
          "name": "Claude Sonnet 4.5 (no thinking) (Antigravity)",
          "limit": { "context": 200000, "output": 64000 },
          "modalities": { "input": ["text", "image", "pdf"], "output": ["text"] }
        },
        "antigravity-claude-sonnet-4-5-thinking": {
          "name": "Claude Sonnet 4.5 Thinking (Antigravity)",
          "limit": { "context": 200000, "output": 64000 },
          "modalities": { "input": ["text", "image", "pdf"], "output": ["text"] },
          "variants": {
            "low": { "thinkingConfig": { "thinkingBudget": 8192 } },
            "max": { "thinkingConfig": { "thinkingBudget": 32768 } }
          }
        },
        "antigravity-claude-opus-4-5-thinking": {
          "name": "Claude Opus 4.5 Thinking (Antigravity)",
          "limit": { "context": 200000, "output": 64000 },
          "modalities": { "input": ["text", "image", "pdf"], "output": ["text"] },
          "variants": {
            "low": { "thinkingConfig": { "thinkingBudget": 8192 } },
            "max": { "thinkingConfig": { "thinkingBudget": 32768 } }
          }
        },
        "gemini-2.5-flash": {
          "name": "Gemini 2.5 Flash (Gemini CLI)",
          "limit": { "context": 1048576, "output": 65536 },
          "modalities": { "input": ["text", "image", "pdf"], "output": ["text"] }
        },
        "gemini-2.5-pro": {
          "name": "Gemini 2.5 Pro (Gemini CLI)",
          "limit": { "context": 1048576, "output": 65536 },
          "modalities": { "input": ["text", "image", "pdf"], "output": ["text"] }
        },
        "gemini-3-flash-preview": {
          "name": "Gemini 3 Flash Preview (Gemini CLI)",
          "limit": { "context": 1048576, "output": 65536 },
          "modalities": { "input": ["text", "image", "pdf"], "output": ["text"] }
        },
        "gemini-3-pro-preview": {
          "name": "Gemini 3 Pro Preview (Gemini CLI)",
          "limit": { "context": 1048576, "output": 65535 },
          "modalities": { "input": ["text", "image", "pdf"], "output": ["text"] }
        }
      }
    },
  },
    "agent": {
     "build": {
       "mode": "primary",
       "model": "openai/gpt-5.2-codex",
       "variant": "low",
       "description": "Primary development agent with full tools"
      },
      "plan": {
        "mode": "primary",
       "model": "openai/gpt-5.3-codex",
       "variant": "high",
        "description": "Analysis and planning agent with plan file management",
       "tools": {
         "todowrite": true,
         "todoread": true,
         "read": true,
         "write": true,
         "edit": true
       },
       "permission": {
         "read": {
           "*": "allow"
         },
         "write": {
           "/home/dxta/.config/opencode/plans/*": "allow"
         },
         "edit": {
           "/home/dxta/.config/opencode/plans/*": "allow"
         },
         "external_directory": "allow",
         "bash": {
           "codex*": "allow",
           "ls*": "allow",
           "ps*": "allow",
           "wc*": "allow",
           "lsof*": "allow",
           "grep*": "allow",
           "pgrep*": "allow",
           "cat*": "allow",
           "awk*": "allow",
           "mkdir -p ~/.config/opencode/plans": "allow",
           "mkdir -p ~/.config/opencode/plans/*": "allow",
           "rm ~/.config/opencode/plans/*": "allow",
           "rm -r ~/.config/opencode/plans/*": "allow",
           "memvid*": "allow",
           "source ~/.config/opencode/scripts/load-mcp-credentials-safe.sh && memvid*": "allow",
           "echo*| memvid*": "allow",
           "source ~/.config/opencode/scripts/load-mcp-credentials-safe.sh && echo*| memvid*": "allow"
         }
       }
     },
     "general": {
       "model": "openai/gpt-5.1-codex",
       "variant": "low"
     },
       "tier-detector": {
        "model": "openai/gpt-5.1-codex-mini",
        "variant": "none"
       },
      "self-reflect": {
       "model": "openai/gpt-5.3-codex",
       "variant": "xhigh"
      },
      "explore": {
       "model": "openai/gpt-5.1-codex",
       "variant": "low"
      }
    },
  "command": {
    "tier-detector-fast": {
      "template": "Run tier-detector fast path:\npkgx python /home/dxta/.dotfiles/opencode/scripts/tier-detector-fast.py $ARGUMENTS",
      "description": "Local fast-path tier classification",
      "agent": "build"
    }
  },
  "mcp": {
    "code-reasoning": {
      "type": "local",
      "command": [
        "pkgx",
        "npx",
        "-y",
        "@mettamatt/code-reasoning"
      ],
      "enabled": true
    },
    "shannon-thinking": {
      "type": "local",
      "command": [
        "pkgx",
        "npx",
        "-y",
        "server-shannon-thinking@latest"
      ],
      "enabled": true
    },
    "context7": {
      "type": "remote",
      "url": "https://mcp.context7.com/mcp",
      "headers": {
        "CONTEXT7_API_KEY": "{env:CONTEXT7_API_KEY}"
      },
      "enabled": true
    },
    "slack": {
      "type": "local",
      "command": [
        "pkgx",
        "npx",
        "-y",
        "slack-mcp-server@latest",
        "--transport",
        "stdio"
      ],
      "environment": {
        "SLACK_MCP_XOXP_TOKEN": "{env:SLACK_MCP_XOXP_TOKEN}",
        "SLACK_MCP_ADD_MESSAGE_TOOL": "C049JSCEDN3"
      },
      "enabled": false
    },
    "obsidian": {
      "type": "local",
      "command": [
        "pkgx",
        "npx",
        "-y",
        "@huangyihe/obsidian-mcp"
      ],
      "environment": {
        "OBSIDIAN_VAULT_PATH": "/home/dxta/Documents/Obsidian/personal",
        "OBSIDIAN_API_TOKEN": "{env:OBSIDIAN_API_TOKEN}",
        "OBSIDIAN_API_PORT": "27123"
      },
      "enabled": true
    },
    "arxiv": {
      "type": "local",
      "command": [
        "uv",
        "tool",
        "run",
        "arxiv-mcp-server",
        "--storage-path",
        "/home/dxta/dev/research/.arxiv-papers"
      ],
      "enabled": true
    }
  },
  "tools": {
    "graphiti-memory_*": false,
    "code-reasoning_*": true,
    "shannon-thinking_*": true,
    "serena-mcp_*": false,
    "chunkhound_*": false,
    "slack_*": false
  },
  "permission": {
    "skill": {
      "*": "allow"
    },
    "read": {
      "*": "allow"
    },
    "bash": {
      "pkgx npm *": "allow",
      "pkgx pnpm *": "allow",
      "pkgx yarn *": "allow",
      "pkgx bun *": "allow",
      "pkgx python *": "allow",
      "pkgx pytest *": "allow",
      "pkgx cargo *": "allow",
      "pkgx go *": "allow",
      "pkgx make *": "allow",
      "pkgx docker *": "allow",
      "pkgx docker compose *": "allow",
      "npm *": "allow",
      "pnpm *": "allow",
      "yarn *": "allow",
      "bun *": "allow",
      "python *": "allow",
      "pytest *": "allow",
      "cargo *": "allow",
      "go *": "allow",
      "make *": "allow",
      "docker *": "allow",
      "docker compose *": "allow",
      "git status": "allow",
      "git diff": "allow",
      "git log": "allow"
    }
  },
  "plugin": [
    "opencode-antigravity-auth@latest",
    "opencode-anthropic-auth@latest",
    "opencode-openai-multi-auth@5.0.5"
  ]
}
