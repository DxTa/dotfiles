{
  "_comment": "MCP Server and Hook Credentials - DO NOT COMMIT the actual .mcp-credentials.json",
  "_note": "This file is separate from .credentials.json which contains Claude AI OAuth tokens",
  "_usage": "Copy to .mcp-credentials.json and fill in your credentials. Loaded by ~/.config/opencode/scripts/load-mcp-credentials-safe.sh",
  "_path": "~/.config/opencode/.mcp-credentials.json",

  "slack": {
    "bot_token": "<YOUR_SLACK_BOT_TOKEN>",
    "user_token": "<YOUR_SLACK_USER_TOKEN_xoxp-...>",
    "team_id": "<YOUR_SLACK_TEAM_ID>"
  },

  "neo4j": {
    "uri": "bolt://localhost:7687",
    "user": "neo4j",
    "password": "<YOUR_NEO4J_PASSWORD>"
  },

  "openai": {
    "api_key": "<YOUR_OPENAI_API_KEY_sk-proj-...>",
    "organization": "<YOUR_OPENAI_ORG_ID_optional>"
  },

  "anthropic": {
    "api_key": "<YOUR_ANTHROPIC_API_KEY_sk-ant-...>"
  },

  "github": {
    "token": "<YOUR_GITHUB_PAT_ghp_...>",
    "username": "<YOUR_GITHUB_USERNAME>"
  },

  "gitlab": {
    "token": "<YOUR_GITLAB_PAT_glpat-...>"
  },

  "context7": {
    "api_key": "<YOUR_CONTEXT7_API_KEY>"
  },

  "gemini": {
    "api_key": "<YOUR_GEMINI_API_KEY>"
  },

  "graphiti": {
    "model_name": "gpt-4.1-mini"
  },

  "gmail": {
    "client_id": "<YOUR_GOOGLE_CLIENT_ID>.apps.googleusercontent.com",
    "project_id": "<YOUR_GOOGLE_PROJECT_ID>",
    "auth_uri": "https://accounts.google.com/o/oauth2/auth",
    "token_uri": "https://oauth2.googleapis.com/token",
    "auth_provider_x509_cert_url": "https://www.googleapis.com/oauth2/v1/certs",
    "client_secret": "<YOUR_GOOGLE_CLIENT_SECRET>",
    "redirect_uris": ["http://localhost"]
  },
  
  "zai": {
    "api_key": "<YOUR_ZAI_API_KEY>"
  },

  "chunkhound": {
    "_comment": "ChunkHound uses OpenAI for embeddings, configured via environment variables",
    "embedding_provider": "openai",
    "embedding_model": "text-embedding-3-large",
    "llm_provider": "claude-code-cli"
  },

  "memvid": {
    "_comment": "Memvid memory uses OpenAI for embeddings via OPENAI_API_KEY env var",
    "embedding_model": "text-embedding-3-large",
    "memory_file": "~/.config/opencode/memory.mv2"
  }
}
